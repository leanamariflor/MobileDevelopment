<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <!-- Add necessary permissions for internet and network state -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/Theme.App.AniWatch"
            tools:targetApi="31">
        <activity
                android:name=".activities.PlayerActivity"
                android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
                android:exported="false"
                android:label="@string/title_activity_player"
                android:theme="@style/Theme.App.AniWatch" />
        <activity
                android:name=".activities.MovieDetailActivity"
                android:exported="true"
                android:theme="@style/Theme.App.AniWatch" />
        <activity
                android:name=".activities.ChangePasswordActivity"
                android:exported="true"
                android:theme="@style/Theme.App.AniWatch" />
        <activity
                android:name=".activities.NotificationsActivity"
                android:exported="false"
                android:theme="@style/Theme.App.AniWatch" />
        <activity
                android:name=".activities.SettingsActivity"
                android:exported="true" />
        <activity
                android:name=".activities.ProfileEditActivity"
                android:exported="true"
                android:theme="@style/Theme.App.AniWatch" />
        <activity
                android:name=".activities.SecurityActivity"
                android:exported="true" />
        <activity
                android:name=".activities.SearchActivity"
                android:exported="true" />
        <activity
                android:name=".activities.SignInActivity"
                android:exported="true"
                android:theme="@style/Theme.App.AniWatch" />
        <activity
                android:name=".activities.DevelopersActivity"
                android:exported="true"
                android:theme="@style/Theme.App.AniWatch" />
        <activity
                android:name=".AnimeAboutActivity"
                android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
                android:exported="true"
                android:theme="@style/Theme.App.AniWatch" />
        <activity
                android:name=".activities.SplashActivity"
                android:exported="true"
                android:theme="@style/Theme.App.AniWatch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.MainActivity"
                android:exported="true"
                android:launchMode="singleTask"
                android:theme="@style/Theme.App.AniWatch" />
        <activity
                android:name=".activities.SignUpActivity"
                android:exported="true"
                android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
                android:theme="@style/Theme.App.AniWatch" />
    </application>

</manifest>